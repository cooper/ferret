class Bot

init {
    need @addr: Str, @nick: Str, @user: Str;
    want @port: Num = 6667;
    @sock = Socket(address: @addr, port: @port);
}

method connect {
    @sock.connect!;
    @send("USER @user * * :@real");
    @send("NICK @nick");
}

method send {
    need $line;
    @sock.println($line);
}
